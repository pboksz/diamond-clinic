.wrapper.admin.admins
  = render 'layouts/messages'

  .container
    %h2= t('admin.passwords.edit.header')

    = simple_form_for @admin, :url => admin_password_path(locale), :method => :put do |f|
      = f.input :password, :as => :password
      = f.input :password_confirmation, :as => :password
      = render 'admin/actions', :url => admin_root_path(locale)
