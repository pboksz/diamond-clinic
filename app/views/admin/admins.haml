.admin.admins
  %h1 Admins
  .new= link_to 'Add Admin', admin_admins_new_path(locale)

  %table
    %thead
      %tr
        %td= 'Email'
        %td= 'Sign In Count'
        %td= 'Current Sign In At'
        %td= 'Current Sign In IP'
        %td= 'Last Sign In At'
        %td= 'Last Sign In IP'
    %tbody
      - @admins.each do |admin|
        %tr
          %td= admin.email
          %td= admin.sign_in_count
          %td= time_ago_in_words(admin.current_sign_in_at) if admin.current_sign_in_at
          %td= admin.current_sign_in_ip
          %td= time_ago_in_words(admin.last_sign_in_at) if admin.last_sign_in_at
          %td= admin.last_sign_in_ip
