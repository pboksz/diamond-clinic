.wrapper.home.request-appointment
  = render 'layouts/messages'

  .container
    %h1= t('views.header.request_appointment')

    .appointment
      %h3= t('views.request_appointment.appointment.header')
      %p= t('views.request_appointment.appointment.description')
      = simple_form_for @appointment, :url => contact_us_path(locale), :method => :post do |f|
        = f.input :name
        = f.input :email
        = f.input :phone_number
        = f.input :doctor, :collection => @doctors, :value_method => :id, :label_method => :full_title_with_specialty
        = f.input :date, :as => :string, :input_html => { :class => :datepicker }
        = f.input :time, :collection => @appointment.available_times
        = f.input :message, :as => :text
        = f.submit t('views.request_appointment.appointment.submit'), :class => 'button'
