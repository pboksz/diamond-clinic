.wrapper.home.request-appointment
  .container
    = render 'layouts/messages'

    %h1= t('views.header.request_appointment')
    .appointment
      %h3= t('views.request_appointment.appointment.header')
      %p= t('views.request_appointment.appointment.description')
      = simple_form_for @appointment, :url => request_appointment_path(locale), :method => :post do |f|
        = f.input :name
        = f.input :email
        = f.input :phone_number
        = f.input :doctor, :collection => @doctors, :value_method => :id, :label_method => :name
        = f.input :clinical_trial, :collection => @clinical_trials, :value_method => :id, :label_method => :condition
        = f.input :date, :as => :string, :input_html => { :class => :datepicker }
        = f.input :time, :collection => @appointment.available_times
        = f.input :message, :as => :text
        = f.submit t('views.request_appointment.appointment.submit'), :class => 'button'
