.wrapper.home.contact-us
  = render 'layouts/messages'

  .container
    .address
      %p= 'Diamond Clinic - Specjalistyczne Poradnie Lekarskie'
      %p= 'Ul. Gen. Augusta Fieldorfa-Nila 14/JU2'
      %p= '31-209 Kraków'
