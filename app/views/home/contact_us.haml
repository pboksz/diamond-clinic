    .contact
      %p= 'Monday to Friday 9:00 to 21:00'
      %p= 'Saturday 9:00 to 15:00'
      %p= 'Tel. +48 122 651 165'
      %p= 'Kom. +48 571 241 412'
      %p= 'Fax. +48 126 371 533'
      %p= mail_to 'biuro@diamondclinic.eu'

    .appointment
      %p Request an Appointment
      = simple_form_for @appointment, :url => contact_us_path(locale), :method => :post do |f|
        = f.input :first_name
        = f.input :last_name
        = f.input :email
        = f.input :phone_number
        = f.input :doctor, :collection => @doctors, :value_method => :id, :label_method => :full_name
        = f.input :date, :as => :string, :input_html => { :class => :datepicker }
        = f.input :time, :collection => @appointment.available_times
        = f.input :message, :as => :text
        = f.submit 'Send Request'

