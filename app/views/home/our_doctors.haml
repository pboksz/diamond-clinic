.wrapper.home.our-doctors
  = render 'layouts/messages'

  .container
    %h1= t('views.header.our_doctors')

    .doctors
      - @doctors.each do |doctor|
        .doctor
          .main-info
            .photo= icon('user-md')
            .name
              = icon('chevron-right')
              = doctor.name(:locale => locale)
            .specialty= doctor.specialty(:locale => locale)
            .clearfix
          .biography= simple_format(doctor.biography(:locale => locale))
          .clearfix
