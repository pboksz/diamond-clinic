.wrapper.home.about-us
  .container
    = render 'layouts/messages'

    %h1= t('defaults.name')
    - t('views.about_us.sections').each do |key, section|
      %p= section
    - t('views.clinical_research.contact').each do |key, contact|
      .section= icon('chevron-right', contact)
    .section
      = icon('chevron-right')
      = mail_to t('defaults.email')
